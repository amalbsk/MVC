@{
    ViewData["Title"] = "Home Page";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="~/css/style.css" asp-append-version="true">

<div class="wrapper">
    <div class="container">
        <div class="row h-100 align-items-center">
            <div class="col-md-6 side-image-container">
                <div class="side-image"></div>
            </div>
            <div class="col-md-6 right">
                <div class="input-box text-center p-5">
                    <h1 class="display-4 mb-4">ImmmMS</h1>
                    <p class="lead mb-4">Efficiently manage your inventory with our system.</p>
                    @if (!Context.Session.TryGetValue("AuthToken", out _))
                    {
                        <div class="mt-4">
                            <a asp-controller="Auth" asp-action="Login" class="btn btn-primary btn-lg me-2">Login</a>
                            @* <a asp-controller="Auth" asp-action="Register" class="btn btn-outline-primary btn-lg">Register</a> *@
                        </div>
                    }
                    else
                    {
                        <div class="mt-4">
                            <a asp-controller="Inventory" asp-action="Dashboard" class="btn btn-success btn-lg">Go to Dashboard</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
